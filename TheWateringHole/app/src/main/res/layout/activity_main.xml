<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hw1.devlyn.thewateringhole.MainActivity"
    android:background="#ffbd32ff">

    <TextView android:text="@string/main_menu_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Framelayout to display Fragments -->

        <!-- Listview to display slider menu -->
        <ListView
            android:id="@+id/list_slider_menu"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="#ff0bff31"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/list_selector"
            android:background="@color/list_background"/>
    </android.support.v4.widget.DrawerLayout>

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <Button
            android:id="@+id/friends_btn"

            android:text="Friends"
            android:textColor="#FEFFFA"
            android:textSize="30sp"

            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@drawable/login_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="left|center_vertical" />

        <Button
                android:id="@+id/settings_btn"

                android:text="Settings"
                android:textColor="#FEFFFA"
                android:textSize="30sp"

                android:layout_width="125dp"
                android:layout_height="50dp"
                android:background="@drawable/login_button"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_below="@+id/drawer_layout"
                android:layout_centerHorizontal="true" />

        <Button
                android:id="@+id/events_btn"

                android:text="Events"
                android:textColor="#FEFFFA"
                android:textSize="30sp"

                android:layout_width="125dp"
                android:layout_height="50dp"
                android:background="@drawable/login_button"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="right|center_vertical" />

        <Button
            android:id="@+id/profile_btn"

            android:text="Profile"
            android:textColor="#FEFFFA"
            android:textSize="30sp"

            android:layout_width="125dp"
            android:layout_height="50dp"
            android:background="@drawable/login_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </FrameLayout>


</RelativeLayout>
